doctype html
html
    head
        link(rel="stylesheet", href="components/bootstrap/dist/css/bootstrap.min.css")
        link(rel="stylesheet", href="index.css")
        script(src="components/jquery/dist/jquery.min.js")
        script(src="components/angularjs/angular.min.js")
        script(src="index.js")
    body(ng-app="Todolist")
        .container(ng-controller="ListController")
            .topbar.clearfix
                form.form-inline.pull-right
                    select.form-control(ng-model="ordering")
                        option(value="datetime") Datetime
                        option(value="title") Title
                    = " "
                    input.form-control(type="text", placeholder="Search", ng-model="query")
            ul.list-group
                li.list-group-item(ng-repeat="item in items | filter:query | orderBy:ordering")
                    h4.list-group-item-heading {{item.title}}
                    p.list-group-item-text {{item.description}}
                    p.list-group-item-text {{item.datetime}}
